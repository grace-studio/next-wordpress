{
  "name": "@grace-studio/next-wordpress",
  "version": "0.0.1",
  "description": "Middle layer to connect a Next.js application with Wordpress Rest API.",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/esm/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir lib/cjs",
    "test": "jest",
    "coverage": "jest --coverage",
    "lint": "eslint",
    "prepublishOnly": "npm test && npm run lint && npm run build",
    "preversion": "npm test && npm run lint",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/grace-studio/next-wordpress.git"
  },
  "keywords": [],
  "author": "Grace Studio",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/grace-studio/next-wordpress/issues"
  },
  "homepage": "https://github.com/grace-studio/next-wordpress#readme",
  "peerDependencies": {
    "next": "^13.0.0"
  },
  "devDependencies": {
    "@types/jest": "29.1.1",
    "@types/node": "18.7.4",
    "@types/qs": "6.9.7",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "29.1.2",
    "prettier": "2.7.1",
    "prettier-eslint": "15.0.1",
    "ts-jest": "29.0.3",
    "typescript": "4.8.4"
  },
  "directories": {
    "lib": "lib",
    "test": "tests"
  }
}
